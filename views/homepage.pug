doctype html
html(lang='en')
  head
    title= title
    meta(charset="UTF-8")
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
    link(rel="stylesheet", href="/stylesheets/style1.css")

  body
    div(class='container-fluid')
      div(class='row')
        div(class='col-sm-2')
          block sidebar
            ul(class='sidebar-nav')
              li
                a(href='/homepage') Home
              li
                hr
                a(href='/cart') Cart
              li
                hr
                a(href='/orders') Orders
              li
                hr
                a(href='/logout') Logout

        div(class='col-sm-10')
          section(class="section-products")
            div(class="container")
              div(class="row justify-content-center text-center")
                div(class="col-md-8 col-lg-6")
                  div(class="header")
                    h3 Featured Product
                    h2 Popular Products

              div(class="row")
              <!-- Single Product -->
                div(class="col-md-6 col-lg-4 col-xl-3")
                each item in items
                  div.product-1(class="single-product")
                    div(class="part-1")
                      ul
                        li
                          h1 #{item.name}

                    div(class="part-2")
                      h3(class="product-title") Product #{item.name}
                      h4(class="product-price")  $#{item.price}
                      h4(class="product-price")
                      div(class='form-group')
                        div(class='row')
                          a(href=`/homepage/${item._id}`) 
                            button.btn.btn-primary(type='submit') Add to Cart

