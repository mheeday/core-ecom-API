extends layout

block content 
    h1=title

    div(style='margin-left:20px;margin-top:20px')

        h4 Items

        table(class='table')
            thead
                tr
                    th(scope="col") S/N
                    th(scope="col") Name
                    th(scope="col") Price
            tbody
                - var total = 0
                if cart
                    each item, index in cart.items
                        tr 
                            th(scope="row") #{index+1} 
                            td #{item.name}
                            td $#{item.price}
                            - total += item.price
                else
                    tr 
                        th(scope="row") 
                        td No Item in Cart                   
    hr
    if cart
        form(action="", method="post")
            button.btn.btn-primary(type='submit') Pay $#{total}

